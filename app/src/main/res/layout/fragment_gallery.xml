<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1E6"
    android:orientation="vertical"
    tools:context=".ui.gallery.GalleryFragment">


    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="@string/escoja_el_menu"
        android:textColor="#1F7180"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="548dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:background="#1F7180"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_Plato4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/plato4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Rollos_Pollo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rollos de Pollo"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/RP_Ingredientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rollos de pollo en salsa y Ensalada verde"
                    android:textColor="#E9E2E2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/RP_Costo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 22.000"
                    android:textColor="#F8E6FF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/RP_Boton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Agregar"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:background="#1F7180"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_Plato3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/plato3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Pescado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pescado"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/P_Ingredientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pescado, Pure de Papa y Ensalada Verde"
                    android:textColor="#E9E2E2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/P_Costo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 23.000"
                    android:textColor="#F8E6FF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/P_Boton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Agregar"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:background="#1F7180"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_Plato1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/plato1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BandejaPaisa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bandeja Paisa"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/BP_Ingredientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frijoles, Chicharon, Carne, Arroz y Ensalada"
                    android:textColor="#E9E2E2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/BP_Costo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 20.000"
                    android:textColor="#F8E6FF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/BP_Boton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Agregar"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:background="#1F7180"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_Plato2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/plato2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Ejecutivo_Día"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ejecutivo del Día"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ED_Ingredientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Principio, Arroz, Ensalada y Proteina"
                    android:textColor="#E9E2E2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ED_Costo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 15.000"
                    android:textColor="#F8E6FF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/ED_Boton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Agregar"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>